<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.moodyfoody" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Moody Foody</name>
    <description>A restaurant review app</description>
    <author email="jgraul0032@conestogac.on.ca" href="http://conestogac.on.ca">
        Jack Graul, Noah McCracken
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="splash.png"/>
        <preference name="AndroidWindowSplashScreenBackground" value="#000000" />
        <preference name="SplashScreenDelay" value="1000"/>
    </platform>
    <icon src="icon.png" />
</widget>
